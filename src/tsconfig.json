{
	"compilerOptions": {
		"module": "commonjs",
			"moduleResolution": "node",
			"pretty": true,
			"sourceMap": true,
			"target": "es6",
			"emitDecoratorMetadata": true,
			"experimentalDecorators": true,
			"outDir": "dist",
			"baseUrl": "src"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.json"
	],
	"exclude": [
		"node_modules"
	]
}
